<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ds.owl.dsdormitory.TabFragmentCheckIn"
    android:orientation="vertical">

    //sample의 item_monitoring_region.xml 응용

    <!-- TODO: Update blank fragment layout -->

    <ToggleButton
        android:id="@+id/backgroundMonitoringToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="ON"
        android:textOff="OFF"
        />
    <ToggleButton
        android:id="@+id/backgroundRangingToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="ON"
        android:textOff="OFF"
        />

    <Button
        android:id="@+id/monitoringButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_monitoring"
        android:onClick="click"/>




</LinearLayout>
